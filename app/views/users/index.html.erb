<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'users/list', user: @user, book: @book %> 
  
  <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
            <td><%= link_to "user.profile_image", users_path(user) %></td>
            <td><%= user.name %></td>
          </tr>
          <% end %>
          <%= paginate @users %>
        </tbody>
      </table>
    </div>
  
  </div>
</div>