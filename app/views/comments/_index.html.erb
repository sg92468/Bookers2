<% comments.each do |comments| %>
  <div class="comments d-flex align-items-center">
    <div class="user-profile">
    <%= link_to user_path(comments.user) do %>
      <%= attachment_image_tag comments.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br>
      <%= comments.user.name %>
    <% end %>
    </div>
    <div class="comment">
    <%= comments.comment %>
    </div>
    <div class="destroy-byn">
    <% if comments.user == current_user %>
      <%= link_to "Destroy", book_comment_path(comments.book, comments), method: :delete, remote: true, class:"btn btn-sm btn-danger", data: { confirm: '本当に消しますか?' } %>
    <% end %>
    </div>
  </div>
<% end %>